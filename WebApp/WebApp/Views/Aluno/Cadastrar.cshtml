@model AlunoModal
@{
    ViewData["Title"] = "Cadastro";
}


<div id="Cadastro" class="col">
    <h1>Cadastrar Aluno</h1>
    <form class="text-start flex-column" asp-action="adicionar" asp-controller="Aluno" method="post">
        <div class="form-group">
            <label for="Matricula">Matricula</label>
            <input type="text" class="form-control" id="Matricula" placeholder="Matricula:" asp-for="Matricula">
        </div>
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" id="Nome" placeholder="Nome:" asp-for="Nome">
        </div>
        <div class="form-group">
            <label for="Sexo">Genero</label>
            <select class="form-control " id="opcaoGeneros" asp-for="Sexo">
                <option>Masculino</option>
                <option>Feminino</option>
            </select>
        </div>
        <div class="form-group">
            <label for="Nascimento">Data de nascimento</label>
            <input type="date" class="form-control" id="Nascimento" placeholder="Data de nascimento:" asp-for="Nascimento">
        </div>
        <div class="form-group">
            <label for="CPF">CPF</label>
            <input type="text" class="form-control" id="CPF" placeholder="CPF:" asp-for="CPF">
        </div>
        <button type="submit" class="btn btn-primary mt-3">Cadastrar</button>
    </form>
</div>

